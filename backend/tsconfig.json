{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./", // Change this to the parent directory of both src and api
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
  ]
}